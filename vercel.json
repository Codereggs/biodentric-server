{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 0 * * *"
    }
  ],
  "rule": {
    "type": "request",
    "action": "block",
    "conditions": [
      {
        "type": "query",
        "value": [
          "SELECT",
          "INSERT",
          "DELETE",
          "UPDATE",
          "DROP",
          "--",
          ";",
          "'"
        ]
      },
      {
        "type": "body",
        "value": [
          "SELECT",
          "INSERT",
          "DELETE",
          "UPDATE",
          "DROP",
          "--",
          ";",
          "'"
        ]
      }
    ]
  }
}
